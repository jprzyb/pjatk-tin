<form id="new-creation">

    <h1>New creation</h1>
    <h2>Skip if you don't want to add creation</h2>

    <label for="id">ID:</label>
    <input type="text" id="id" name="id" required value="AUTO GENERATED" disabled>

    <label for="fileName">File:</label>
    <input type="text" id="fileName" name="fileName" required>

    <label for="campaignId">Campaign id:</label>
    <input type="number" id="campaignId" name="campaignId" required value=<%= id %> disabled>

    <label for="isAnimated">Is animated?:</label>
    <input type="checkbox" id="isAnimated" name="isAnimated">

    <button type="submit">Submit</button>
    <label id="error" name="error"></label>
    <button type="button" id="skipButton">Next</button>
</form>
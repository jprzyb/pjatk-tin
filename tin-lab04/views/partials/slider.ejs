<div class="slider-container">
    <div class="slider">
        <div class="slide"><img src="../images/logo1.jpg"></div>
        <div class="slide"><img src="../images/logo2.jpg"></div>
        <div class="slide"><img src="../images/logo3.jpg"></div>
    </div>
</div>

<script>
    let currentIndex = 0;
    const slides = document.querySelectorAll('.slide');
    const totalSlides = slides.length;

    function showNextSlide() {
        currentIndex = (currentIndex + 1) % totalSlides;
        updateSlider();
    }

    function updateSlider() {
        const offset = -currentIndex * 600;
        document.querySelector('.slider').style.transform = `translateX(${offset}px)`;
    }

    setInterval(showNextSlide, 3000);

</script>